<%- include('./partials/header') %>

<div class="w-full min-h-screen px-10 py-10 flex flex-col gap-10">
    <h1 class="text-3xl font-bold mb-6">Your Shopping Cart</h1>
    <div class="flex gap-10">
        <!-- Cart Section (Left Side) -->
        <div class="w-[70%] flex flex-col gap-6">
            <% user.cart.forEach(function(product, index) { %>
            <div class="flex items-center p-4 border border-gray-300 rounded-lg shadow-sm">
                <!-- Product Image -->
                <div class="w-1/4 flex justify-center">
                    <img class="h-32 object-cover" src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" alt="<%= product.name %>">
                </div>
                <!-- Product Details -->
                <div class="w-3/4 px-4 flex flex-col justify-between">
                    <h3 class="text-xl font-semibold"><%= product.name %></h3>
                    <div class="flex justify-between items-center">
                        <h4 class="text-lg font-semibold text-green-600">₹ <%= product.price %></h4>
                        <div class="flex items-center gap-2">
                            <button class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center hover:bg-gray-200 transition">
                                <i class="ri-add-line"></i>
                            </button>
                            <span class="px-3 py-1 rounded-md bg-gray-100 text-black font-semibold"><%= product.quantity %></span>
                            <button class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center hover:bg-gray-200 transition">
                                <i class="ri-subtract-line"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>

        <!-- Price Breakdown Section (Right Side) -->
        <div class="w-[30%] flex flex-col gap-6">
            <h3 class="text-2xl font-semibold">Price Breakdown</h3>
            <div class="bg-white shadow-md rounded-lg p-6">
                <% user.cart.forEach(function(product, index) { %>
                <div class="mb-4 border-b pb-2">
                    <h4 class="text-lg font-semibold"><%= product.name %></h4>
                    <div class="flex justify-between items-center">
                        <span>Total MRP</span>
                        <span>₹ <%= product.price %></span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span>Discount</span>
                        <span class="text-red-500">- ₹ <%= product.discount %></span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span>Platform Fee</span>
                        <span>₹ 20</span>
                    </div>
                    <div class="flex justify-between items-center">
                        <span>Shipping</span>
                        <span class="text-green-500">FREE</span>
                    </div>
                    <div class="flex justify-between items-center font-bold">
                        <span>Subtotal</span>
                        <span>₹ <%= (product.price - product.discount + 20) %></span>
                    </div>
                </div>
                <% }); %>

                <div class="w-full h-[1px] bg-gray-300 my-4"></div>
                <!-- Total Amount -->
                <div class="flex justify-between items-center">
                    <h3 class="text-xl font-bold">Total Amount</h3>
                    <h3 class="text-2xl font-semibold text-green-600">
                        ₹
                        <%= user.cart.reduce((total, product) => total + (product.price - product.discount + 20), 0) %>
                    </h3>
                </div>
            </div>

            <!-- Checkout Button -->
            <div class="mt-6 flex justify-end">
                <button class="px-6 py-3 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 transition">
                    Proceed to Checkout
                </button>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
