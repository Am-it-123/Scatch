<%- include('./partials/header') %>

<% if(success.length > 0) { %>
    <div class="fixed top-5 left-1/2 transform -translate-x-1/2 p-3 rounded-md bg-blue-600 shadow-lg">
        <span class="inline-block text-white font-medium">
            <%= success %>
        </span>
    </div>
<% } %>

<div class="min-h-screen bg-gray-100 flex flex-col items-center justify-center py-12">
    <div class="container px-10 py-20 flex">
        <!-- Sidebar -->
        <div class="w-1/4 bg-white p-6 shadow-lg rounded-lg mr-6">
            <nav class="flex flex-col space-y-4">
                <a class="text-gray-700 font-semibold hover:text-blue-500 transition duration-300" href="#">All Products</a>
                <a class="text-gray-700 font-semibold hover:text-blue-500 transition duration-300" href="#">Create New Product</a>
            </nav>
        </div>

        <!-- Main Content -->
        <main class="w-3/4 bg-white p-10 shadow-lg rounded-lg">
            <h2 class="text-2xl font-bold text-gray-800 mb-6">Create New Product</h2>
            <form autocomplete="off" action="/create" method="post"enctype="multipart/form-data">
                <!-- Product Details -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold text-gray-700 mb-4">Product Details</h3>
                    <div class="mb-6">
                        <label class="block mb-2 font-medium text-gray-600">Product Image</label>
                        <input name="image" type="file" class="py-2 px-4 rounded border border-gray-300 w-full focus:ring-blue-500 focus:border-blue-500">
                    </div>
                    <div class="grid grid-cols-2 gap-6">
                        <input name="name" type="text" placeholder="Product Name"
                            class="border border-gray-300 rounded p-3 w-full focus:ring-blue-500 focus:border-blue-500" required>
                        <input name="price" type="text" placeholder="Product Price"
                            class="border border-gray-300 rounded p-3 w-full focus:ring-blue-500 focus:border-blue-500" required>
                        <input name="discount" type="text" placeholder="Discount Price"
                            class="border border-gray-300 rounded p-3 w-full focus:ring-blue-500 focus:border-blue-500">
                    </div>
                </div>

                <!-- Panel Details -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold text-gray-700 mb-4">Panel Details</h3>
                    <div class="grid grid-cols-2 gap-6">
                        <input name="bgcolor" type="text" placeholder="Background Color"
                            class="border border-gray-300 rounded p-3 w-full focus:ring-blue-500 focus:border-blue-500">
                        <input name="panelcolor" type="text" placeholder="Panel Color"
                            class="border border-gray-300 rounded p-3 w-full focus:ring-blue-500 focus:border-blue-500">
                        <input name="textcolor" type="text" placeholder="Text Color"
                            class="border border-gray-300 rounded p-3 w-full focus:ring-blue-500 focus:border-blue-500">
                    </div>
                </div>

                <!-- Submit Button -->
                <input class="px-5 py-3 rounded bg-blue-500 text-white font-semibold hover:bg-blue-600 transition duration-300 w-full cursor-pointer" type="submit"
                    value="Create New Product">
            </form>
        </main>
    </div>
</div>

<%- include('./partials/footer') %>
